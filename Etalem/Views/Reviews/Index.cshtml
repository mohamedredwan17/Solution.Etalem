@model IEnumerable<Etalem.Models.DTOs.ReviewDto>

@{
    ViewData["Title"] = "Course Reviews";
    int courseId = (int)ViewData["CourseId"];
}

<h2 class="text-3xl font-bold mb-6 text-gray-900">Course Reviews</h2>

<!-- Toast Container -->
<div aria-live="polite" aria-atomic="true" class="fixed top-4 right-4 z-50">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-500 text-white p-4 rounded-md shadow-lg mb-2" role="alert">
            <div class="flex justify-between items-center">
                <span class="font-semibold">Success</span>
                <button type="button" class="text-white hover:text-gray-200" onclick="this.parentElement.parentElement.style.display='none'">×</button>
            </div>
            <p class="mt-2">@TempData["SuccessMessage"]</p>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-500 text-white p-4 rounded-md shadow-lg mb-2" role="alert">
            <div class="flex justify-between items-center">
                <span class="font-semibold">Error</span>
                <button type="button" class="text-white hover:text-gray-200" onclick="this.parentElement.parentElement.style.display='none'">×</button>
            </div>
            <p class="mt-2">@TempData["ErrorMessage"]</p>
        </div>
    }
</div>

@if (Model.Any())
{
    <div class="space-y-4">
        @foreach (var review in Model)
        {
            <div class="bg-white rounded-lg shadow-md p-4">
                <p class="text-gray-600"><strong>@review.UserName</strong> rated this course: @review.Rating/5</p>
                <p class="text-gray-600">@review.Comment</p>
                <p class="text-gray-500 text-sm">Posted on: @review.CreatedAt.ToString("d MMM yyyy")</p>
                @if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == review.UserId)
                {
                    <form asp-action="Delete" asp-route-reviewId="@review.Id" asp-route-courseId="@review.CourseId" method="post" class="inline">
                        <button type="submit" class="text-red-600 hover:underline">Delete</button>
                    </form>
                }
            </div>
        }
    </div>
}
else
{
    <p class="text-gray-500">No reviews yet.</p>
}

<div class="mt-6">
    <a asp-action="Create" asp-route-courseId="@courseId" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Add a Review</a>
    <a asp-controller="Course" asp-action="Details" asp-route-id="@courseId" class="inline-block bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 ml-4">Back to Course</a>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            setTimeout(() => {
                document.querySelectorAll('.toast').forEach(toast => {
                    toast.style.display = 'none';
                });
            }, 5000);
        });
    </script>
}