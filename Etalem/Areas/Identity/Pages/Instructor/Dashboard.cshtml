@page
@{
    ViewData["Title"] = "Instructor Dashboard";
}

<div class="min-h-screen bg-gray-100 py-10 px-4">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold mb-8 text-gray-800 text-center">Instructor Dashboard</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            <!-- Manage Courses -->
            <a asp-page="/Instructor/Courses/Index"
               class="bg-white border border-gray-200 rounded-2xl shadow-md p-6 hover:shadow-lg transition">
                <h2 class="text-xl font-semibold text-blue-700 mb-2">Manage Courses</h2>
                <p class="text-gray-600">Add, edit, or delete course categories.</p>
            </a>

        </div>
    </div>
</div>
