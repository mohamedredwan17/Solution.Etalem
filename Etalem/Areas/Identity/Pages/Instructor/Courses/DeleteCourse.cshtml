@page "{id:int}"
@model Etalem.Areas.Identity.Pages.Instructor.Courses.DeleteCourseModel

@{
    ViewData["Title"] = "Delete Course";
}

<h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-200">Delete Course</h1>

<div class="max-w-2xl mx-auto">
    <h3 class="text-lg font-medium text-gray-700 dark:text-gray-300">Are you sure you want to delete this course?</h3>

    <div class="mt-4 bg-white dark:bg-gray-800 p-4 rounded-lg shadow-md">
        <div class="flex items-center space-x-4">
            <img src="@Model.Course.ThumbnailUrl" alt="@Model.Course.Title" class="w-24 h-24 object-cover rounded" />
            <div>
                <h4 class="text-xl font-semibold text-gray-800 dark:text-gray-200">@Model.Course.Title</h4>
                <p class="text-gray-600 dark:text-gray-400">@Model.Course.ShortDescription</p>
            </div>
        </div>
    </div>

    <form method="post" class="mt-6 flex justify-end space-x-4">
        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">Delete</button>
        <a asp-page="/Courses" asp-area="Identity" class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400 dark:bg-gray-600 dark:text-gray-200 dark:hover:bg-gray-500">Cancel</a>
    </form>
</div>