@page
@model Etalem.Areas.Identity.Pages.Instructor.Courses.CoursesModel

@{
    ViewData["Title"] = "My Courses";
}

<h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-200">My Courses</h1>

<div class="mb-4">
    <a asp-page="CreateCourse" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600">Create New Course</a>
</div>

@if (Model.Courses.Any())
{
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white dark:bg-gray-800 shadow-md rounded-lg">
            <thead>
                <tr class="bg-gray-100 dark:bg-gray-700">
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 dark:text-gray-300">Thumbnail</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 dark:text-gray-300">Title</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 dark:text-gray-300">Price</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 dark:text-gray-300">Level</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 dark:text-gray-300">Published</th>
                    <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 dark:text-gray-300">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.Courses)
                {
                    <tr class="border-b dark:border-gray-600">
                        <td class="px-4 py-2">
                            <img src="@course.ThumbnailUrl" alt="@course.Title" class="w-16 h-16 object-cover rounded" />
                        </td>
                        <td class="px-4 py-2 text-gray-800 dark:text-gray-200">@course.Title</td>
                        <td class="px-4 py-2 text-gray-800 dark:text-gray-200">@course.Price.ToString("C")</td>
                        <td class="px-4 py-2 text-gray-800 dark:text-gray-200">@course.Level</td>
                        <td class="px-4 py-2 text-gray-800 dark:text-gray-200">@(course.IsPublished ? "Yes" : "No")</td>
                        <td class="px-4 py-2">
                            <a asp-page="EditCourse" asp-route-id="@course.Id" class="text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-600">Edit</a>
                            <span class="mx-2">|</span>
                            <a asp-page="DeleteCourse" asp-route-id="@course.Id" class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-600">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-gray-600 dark:text-gray-400">No courses found. Start by creating a new course!</p>
};