@page
@model Etalem.Areas.Identity.Pages.Instructor.Courses.CreateCourseModel

@{
    ViewData["Title"] = "Create New Course";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900">
    <div class="bg-white dark:bg-gray-800 shadow-md rounded-2xl p-8 w-full max-w-2xl">
        <h1 class="text-2xl font-bold mb-6 text-center text-gray-800 dark:text-gray-200">Create New Course</h1>

        <!-- Errors -->
        @if (!ModelState.IsValid)
        {
            <div class="bg-red-100 dark:bg-red-900 text-red-600 dark:text-red-200 p-4 rounded-xl mb-6" role="alert">
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="text-sm">@error.ErrorMessage</p>
                }
            </div>
        }

        <!-- Form -->
        <form method="post" enctype="multipart/form-data" class="space-y-5">
            <div>
                <label asp-for="Course.Title" class="block mb-1 font-medium text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Course.Title" class="w-full px-4 py-2 border-2 border-blue-300 bg-blue-50 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100" />
                <span asp-validation-for="Course.Title" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.Description" class="block mb-1 font-medium text-gray-700 dark:text-gray-300"></label>
                <textarea asp-for="Course.Description" rows="4" class="w-full px-4 py-2 border-2 border-blue-300 bg-blue-50 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100"></textarea>
                <span asp-validation-for="Course.Description" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.ShortDescription" class="block mb-1 font-medium text-gray-700 dark:text-gray-300"></label>
                <textarea asp-for="Course.ShortDescription" rows="2" class="w-full px-4 py-2 border-2 border-blue-300 bg-blue-50 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100"></textarea>
                <span asp-validation-for="Course.ShortDescription" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.Level" class="block mb-1 font-medium text-gray-700 dark:text-gray-300"></label>
                <select asp-for="Course.Level" asp-items="Html.GetEnumSelectList<Etalem.Models.CourseLevel>()" class="w-full px-4 py-2 border-2 border-blue-300 bg-blue-50 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100">
                    <option value="">Select Level</option>
                </select>
                <span asp-validation-for="Course.Level" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.Price" class="block mb-1 font-medium text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Course.Price" type="number" step="0.01" class="w-full px-4 py-2 border-2 border-blue-300 bg-blue-50 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100" />
                <span asp-validation-for="Course.Price" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.ThumbnailFile" class="block mb-1 font-medium text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Course.ThumbnailFile" type="file" accept="image/*" class="w-full px-4 py-2 text-gray-700 dark:text-gray-100 file:rounded-xl file:border-2 file:border-blue-300 file:bg-blue-50 file:text-gray-700 dark:file:bg-gray-700 dark:file:border-blue-500 dark:file:text-gray-100 file:px-4 file:py-2" />
                <span asp-validation-for="Course.ThumbnailFile" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.LearningObjectives" class="block mb-1 font-medium text-gray-700 dark:text-gray-300"></label>
                <textarea asp-for="Course.LearningObjectives" rows="4" class="w-full px-4 py-2 border-2 border-blue-300 bg-blue-50 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100"></textarea>
                <span asp-validation-for="Course.LearningObjectives" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.Requirements" class="block mb-1 font-medium text-gray-700 dark:text-gray-300"></label>
                <textarea asp-for="Course.Requirements" rows="4" class="w-full px-4 py-2 border-2 border-blue-300 bg-blue-50 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100"></textarea>
                <span asp-validation-for="Course.Requirements" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    <strong>Note:</strong> Course duration will be automatically calculated based on the lessons you add later.
                </p>
            </div>

            <div>
                <label asp-for="Course.CategoryId" class="block mb-1 font-medium text-gray-700 dark:text-gray-300"></label>
                <select asp-for="Course.CategoryId" asp-items="Model.Categories" class="w-full px-4 py-2 border-2 border-blue-300 bg-blue-50 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Course.CategoryId" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.IsPublished" class="block mb-1 font-medium text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Course.IsPublished" type="checkbox" class="mt-1 h-4 w-4 text-indigo-600 focus:ring-indigo-500 dark:bg-gray-800 dark:border-gray-600 rounded" />
                <span asp-validation-for="Course.IsPublished" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between items-center mt-6">
                <a asp-page="./Index" asp-area="Identity" class="inline-flex items-center space-x-1 text-gray-600 hover:text-blue-500 dark:text-gray-400 dark:hover:text-blue-400">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    <span>Back</span>
                </a>
                <button type="submit" class="inline-flex items-center space-x-1 bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-xl">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span>Create</span>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}