@page
@model Etalem.Areas.Identity.Pages.Instructor.Courses.CreateCourseModel

@{
    ViewData["Title"] = "Create New Course";
}

<div class="min-h-screen flex items-center justify-center p-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 w-full max-w-2xl">
        <h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-200">Create New Course</h1>

        <!-- Errors -->
        @if (!ModelState.IsValid)
        {
            <div class="bg-red-100 dark:bg-red-900 text-red-600 dark:text-red-200 p-4 rounded-md mb-6" role="alert">
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="text-sm">@error.ErrorMessage</p>
                }
            </div>
        }

        <!-- Form -->
        <form method="post" enctype="multipart/form-data" class="space-y-6">
            <div>
                <label asp-for="Course.Title" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Course.Title" class="mt-1 block w-full rounded-md border-2 border-blue-300 bg-blue-50 shadow-sm focus:border-blue-400 focus:ring-blue-300 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100 dark:focus:border-blue-400 dark:focus:ring-blue-300" />
                <span asp-validation-for="Course.Title" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.Description" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <textarea asp-for="Course.Description" rows="4" class="mt-1 block w-full rounded-md border-2 border-blue-300 bg-blue-50 shadow-sm focus:border-blue-400 focus:ring-blue-300 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100 dark:focus:border-blue-400 dark:focus:ring-blue-300"></textarea>
                <span asp-validation-for="Course.Description" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.ShortDescription" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <textarea asp-for="Course.ShortDescription" rows="2" class="mt-1 block w-full rounded-md border-2 border-blue-300 bg-blue-50 shadow-sm focus:border-blue-400 focus:ring-blue-300 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100 dark:focus:border-blue-400 dark:focus:ring-blue-300"></textarea>
                <span asp-validation-for="Course.ShortDescription" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.Level" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <select asp-for="Course.Level" asp-items="Html.GetEnumSelectList<Etalem.Models.CourseLevel>()" class="mt-1 block w-full rounded-md border-2 border-blue-300 bg-blue-50 shadow-sm focus:border-blue-400 focus:ring-blue-300 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100 dark:focus:border-blue-400 dark:focus:ring-blue-300">
                    <option value="">Select Level</option>
                </select>
                <span asp-validation-for="Course.Level" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.Price" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Course.Price" type="number" step="0.01" class="mt-1 block w-full rounded-md border-2 border-blue-300 bg-blue-50 shadow-sm focus:border-blue-400 focus:ring-blue-300 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100 dark:focus:border-blue-400 dark:focus:ring-blue-300" />
                <span asp-validation-for="Course.Price" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.ThumbnailFile" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Course.ThumbnailFile" type="file" accept="image/*" class="mt-1 block w-full text-gray-700 dark:text-gray-100 file:rounded-md file:border-2 file:border-blue-300 file:bg-blue-50 file:text-gray-700 dark:file:bg-gray-700 dark:file:border-blue-500 dark:file:text-gray-100" />
                <span asp-validation-for="Course.ThumbnailFile" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.LearningObjectives" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <textarea asp-for="Course.LearningObjectives" rows="4" class="mt-1 block w-full rounded-md border-2 border-blue-300 bg-blue-50 shadow-sm focus:border-blue-400 focus:ring-blue-300 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100 dark:focus:border-blue-400 dark:focus:ring-blue-300"></textarea>
                <span asp-validation-for="Course.LearningObjectives" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.Requirements" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <textarea asp-for="Course.Requirements" rows="4" class="mt-1 block w-full rounded-md border-2 border-blue-300 bg-blue-50 shadow-sm focus:border-blue-400 focus:ring-blue-300 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100 dark:focus:border-blue-400 dark:focus:ring-blue-300"></textarea>
                <span asp-validation-for="Course.Requirements" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                    <strong>Note:</strong> Course duration will be automatically calculated based on the lessons you add later.
                </p>
            </div>

            <div>
                <label asp-for="Course.CategoryId" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <select asp-for="Course.CategoryId" asp-items="Model.Categories" class="mt-1 block w-full rounded-md border-2 border-blue-300 bg-blue-50 shadow-sm focus:border-blue-400 focus:ring-blue-300 dark:bg-gray-700 dark:border-blue-500 dark:text-gray-100 dark:focus:border-blue-400 dark:focus:ring-blue-300">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Course.CategoryId" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Course.IsPublished" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
                <input asp-for="Course.IsPublished" type="checkbox" class="mt-1 h-4 w-4 text-indigo-600 focus:ring-indigo-500 dark:bg-gray-800 dark:border-gray-600 rounded" />
                <span asp-validation-for="Course.IsPublished" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex justify-end space-x-4">
                <button type="submit" class="inline-flex items-center space-x-1 px-4 py-2 bg-indigo-600 text-white rounded-full hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 transition-colors duration-200">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span>Create Course</span>
                </button>
                <a asp-page="/Courses" asp-area="Identity" class="inline-flex items-center space-x-1 px-4 py-2 bg-gray-300 text-gray-800 rounded-full hover:bg-gray-400 dark:bg-gray-600 dark:text-gray-200 dark:hover:bg-gray-500 transition-colors duration-200">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    <span>Cancel</span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}