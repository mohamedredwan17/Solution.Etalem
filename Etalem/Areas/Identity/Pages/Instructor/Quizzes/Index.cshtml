@page "{courseId:int}"
@model Etalem.Areas.Identity.Pages.Instructor.Quizzes.IndexModel

@{
    ViewData["Title"] = "Manage Quizzes";
}

<div class="m-6">
    <h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-200">Manage Quizzes for @Model.CourseTitle</h1>

    <!-- Error Message -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline">@TempData["ErrorMessage"]</span>
        </div>
    }

    <!-- Buttons -->
    <div class="mb-6 flex space-x-4">
        <a asp-page="Create" asp-route-courseId="@Model.CourseId" class="inline-flex items-center space-x-1 px-4 py-2 bg-indigo-600 text-white rounded-full hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 transition-colors duration-200">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <span>Add New Quiz</span>
        </a>
        <a asp-page="../Courses/Index" class="inline-flex items-center space-x-1 px-4 py-2 bg-gray-500 text-white rounded-full hover:bg-gray-600 dark:bg-gray-600 dark:hover:bg-gray-700 transition-colors duration-200">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            <span>Back to Courses</span>
        </a>
    </div>

    @if (Model.Quizzes.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var quiz in Model.Quizzes.OrderBy(q => q.Order))
            {
                <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-lg overflow-hidden">
                    <div class="p-6">
                        <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-2">@quiz.Title</h2>
                        <p class="text-gray-600 dark:text-gray-400 mb-2 line-clamp-3">@quiz.Description</p>
                        <div class="space-y-2 mb-4">
                            <p class="text-gray-600 dark:text-gray-400 flex items-center space-x-2">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span><strong>Time Limit:</strong> @quiz.TimeLimit minutes</span>
                            </p>
                            <p class="text-gray-600 dark:text-gray-400 flex items-center space-x-2">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span><strong>Passing Score:</strong> @quiz.PassingScore%</span>
                            </p>
                            <p class="text-gray-600 dark:text-gray-400 flex items-center space-x-2">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                <span><strong>Max Attempts:</strong> @quiz.MaxAttempts</span>
                            </p>
                        </div>
                        <div class="flex justify-between items-center">
                            <div>
                                <a asp-page="Questions/Index" asp-route-quizId="@quiz.Id" class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 dark:bg-green-500 dark:hover:bg-green-600">
                                    Manage Questions
                                </a>
                            </div>
                            <div>
                                <a asp-page-handler="Delete" asp-route-quizId="@quiz.Id" asp-route-courseId="@Model.CourseId" class="inline-flex items-center space-x-1 text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300" onclick="return confirm('Are you sure you want to delete this quiz?');">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                    <span>Delete</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-gray-600 dark:text-gray-400">No quizzes found. Start by adding a new quiz!</p>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}