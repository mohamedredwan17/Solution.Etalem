@page "{courseId:int}"
@model Etalem.Areas.Identity.Pages.Instructor.Quizzes.CreateModel
@{
    ViewData["Title"] = "Create Quiz";
}

<h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-200">Create New Quiz for @Model.CourseTitle</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">@Model.ErrorMessage</span>
    </div>
}

<div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

<form method="post" class="space-y-4">
    <input type="hidden" asp-for="Quiz.CourseId"  />
    <div>
        <label asp-for="Quiz.Title" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Title</label>
        <input asp-for="Quiz.Title" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        <span asp-validation-for="Quiz.Title" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Quiz.Description" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Description</label>
        <textarea asp-for="Quiz.Description" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" rows="3" required></textarea>
        <span asp-validation-for="Quiz.Description" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Quiz.TimeLimit" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Time Limit (minutes)</label>
        <input asp-for="Quiz.TimeLimit" type="number" min="1" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        <span asp-validation-for="Quiz.TimeLimit" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Quiz.PassingScore" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Passing Score (%)</label>
        <input asp-for="Quiz.PassingScore" type="number" min="0" max="100" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        <span asp-validation-for="Quiz.PassingScore" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Quiz.MaxAttempts" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Max Attempts</label>
        <input asp-for="Quiz.MaxAttempts" type="number" min="1" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        <span asp-validation-for="Quiz.MaxAttempts" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Quiz.Order" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Order</label>
        <input asp-for="Quiz.Order" type="number" min="1" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        <span asp-validation-for="Quiz.Order" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600">Create Quiz</button>
        <a asp-page="../Courses/Courses" asp-area="Identity" class="ml-2 px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 dark:bg-gray-600 dark:hover:bg-gray-700">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}