@page "{quizId:int}"
@model Etalem.Areas.Identity.Pages.Instructor.Quizzes.Questions.AddQuestionsModel
@{
    ViewData["Title"] = "Add Questions";
}

<h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-200">Add Questions to @Model.QuizTitle</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">@Model.ErrorMessage</span>
    </div>
}

<form method="post" class="space-y-4">
    <input type="hidden" asp-for="Question.QuizId" /> 
    <div>
        <label asp-for="Question.Text" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Question Text</label>
        <input asp-for="Question.Text" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        <span asp-validation-for="Question.Text" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Question.CorrectAnswer" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Correct Answer</label>
        <input asp-for="Question.CorrectAnswer" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        <span asp-validation-for="Question.CorrectAnswer" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Question.Options" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Options (comma-separated)</label>
        <input asp-for="Question.Options" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" placeholder="e.g., Option1, Option2, Option3" required />
        <span asp-validation-for="Question.Options" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Question.Points" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Points</label>
        <input asp-for="Question.Points" type="number" min="1" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        <span asp-validation-for="Question.Points" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Question.Order" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Order</label>
        <input asp-for="Question.Order" type="number" min="1" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" required />
        <span asp-validation-for="Question.Order" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600">Add Question</button>
        <a asp-page="Index" asp-route-quizId="@Model.Question.QuizId" asp-area="Identity" class="ml-2 px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 dark:bg-gray-600 dark:hover:bg-gray-700">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}