@page "{quizId:int}"
@model Etalem.Areas.Identity.Pages.Instructor.Quizzes.Questions.IndexModel

@{
    ViewData["Title"] = "Manage Questions";
}

<div class="m-6">
    <h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-200">Manage Questions for @Model.QuizTitle</h1>

    <!-- Error/Success Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded shadow-md mb-4" role="alert">
            <span class="block sm:inline">@TempData["ErrorMessage"]</span>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-md mb-4" role="alert">
            <span class="block sm:inline">@TempData["SuccessMessage"]</span>
        </div>
    }

    <!-- Buttons -->
    <div class="mb-6 flex space-x-4">
        <a asp-page="AddQuestions" asp-route-quizId="@Model.QuizId" class="inline-flex items-center space-x-1 px-4 py-2 bg-indigo-600 text-white rounded-full hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 transition-colors duration-200">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <span>Add New Question</span>
        </a>
        @if (Model.CourseId.HasValue)
        {
            <a asp-page="../Index" asp-route-courseId="@Model.CourseId.Value" class="inline-flex items-center space-x-1 px-4 py-2 bg-gray-500 text-white rounded-full hover:bg-gray-600 dark:bg-gray-600 dark:hover:bg-gray-700 transition-colors duration-200">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                <span>Back to Quizzes</span>
            </a>
        }
        else
        {
            <a asp-page="../Index" class="inline-flex items-center space-x-1 px-4 py-2 bg-gray-500 text-white rounded-full hover:bg-gray-600 dark:bg-gray-600 dark:hover:bg-gray-700 transition-colors duration-200">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                <span>Back to Quizzes</span>
            </a>
        }
    </div>

    @if (Model.Questions.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var question in Model.Questions.OrderBy(q => q.Order))
            {
                <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-lg overflow-hidden">
                    <div class="p-6">
                        <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-2 line-clamp-2">@question.Text</h2>
                        <div class="space-y-2 mb-4">
                            <p class="text-gray-600 dark:text-gray-400 flex items-center space-x-2">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span><strong>Correct Answer:</strong> @question.CorrectAnswer</span>
                            </p>
                            <p class="text-gray-600 dark:text-gray-400 flex items-center space-x-2">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                </svg>
                                <span><strong>Options:</strong> @question.Options</span>
                            </p>
                            <p class="text-gray-600 dark:text-gray-400 flex items-center space-x-2">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span><strong>Points:</strong> @question.Points</span>
                            </p>
                            <p class="text-gray-600 dark:text-gray-400 flex items-center space-x-2">
                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
                                </svg>
                                <span><strong>Order:</strong> @question.Order</span>
                            </p>
                        </div>
                        <div class="flex justify-end">
                            <a asp-page-handler="Delete" asp-route-questionId="@question.Id" asp-route-quizId="@Model.QuizId" class="inline-flex items-center space-x-1 text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300" onclick="return confirm('Are you sure you want to delete this question?');">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                                <span>Delete</span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-gray-600 dark:text-gray-400">No questions found. Start by adding a new question!</p>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}