@page "{id:int}/{courseId:int}"
@model Etalem.Areas.Identity.Pages.Instructor.Lessons.DeleteModel

@{
    ViewData["Title"] = "Delete Lesson";
}

<h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-200">Delete Lesson</h1>
<h3 class="text-lg text-gray-600 dark:text-gray-400 mb-4">Are you sure you want to delete this lesson?</h3>

<div class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-md">
    <h4 class="text-xl font-semibold text-gray-800 dark:text-gray-200">@Model.Lesson.Title</h4>
    <p class="text-gray-600 dark:text-gray-400"><strong>Duration:</strong> @Model.Lesson.Duration minutes</p>
    <p class="text-gray-600 dark:text-gray-400"><strong>Order:</strong> @Model.Lesson.Order</p>
    <p class="text-gray-600 dark:text-gray-400"><strong>Content:</strong> @Model.Lesson.Content</p>
    @if (Model.Lesson.Resources.Any())
    {
        <p class="text-gray-600 dark:text-gray-400"><strong>Resources:</strong></p>
        <ul class="list-disc pl-5">
            @foreach (var resource in Model.Lesson.Resources)
            {
                <li>@resource.Title (@resource.ResourceType)</li>
            }
        </ul>
    }

    <form method="post" class="mt-6 flex justify-end space-x-4">
        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600">Delete</button>
        <a asp-page="Index" asp-route-courseId="@Model.Lesson.CourseId" class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400 dark:bg-gray-600 dark:text-gray-200 dark:hover:bg-gray-500">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}