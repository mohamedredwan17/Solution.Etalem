@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-2xl font-semibold text-gray-800 mb-4">@ViewData["Title"]</h3>

<div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-6" role="alert">
    <p class="font-bold">Deleting this data will permanently remove your account, and this cannot be recovered.</p>
</div>

<div class="max-w-md">
    <form id="delete-user" method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>

        @if (Model.RequirePassword)
        {
            <div class="space-y-2">
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.Password"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-red-500 focus:border-red-500"
                       autocomplete="current-password"
                       aria-required="true"
                       placeholder="Please enter your password." />
                <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
            </div>
        }

        <button class="w-full px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition"
                type="submit">
            Delete data and close my account
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}