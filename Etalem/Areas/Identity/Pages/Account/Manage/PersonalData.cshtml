@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-2xl font-semibold text-gray-900 mb-6">@ViewData["Title"]</h3>

<div class="container mx-auto">
    <div class="w-full md:w-1/2">
        <p class="text-gray-700 mb-4">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p class="text-gray-900 font-bold mb-4">
            Deleting this data will permanently remove your account, and this cannot be recovered.
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-4">
            <button class="bg-blue-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="bg-red-600 text-white font-medium py-2 px-4 rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 inline-block">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
}
