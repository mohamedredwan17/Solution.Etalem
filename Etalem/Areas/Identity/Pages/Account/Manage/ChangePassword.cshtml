@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="max-w-md bg-white">
    <h3 class="text-2xl font-semibold text-gray-800 mb-4">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="change-password-form" method="post" class="">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>

        <div class="space-y-2">
            <label asp-for="Input.OldPassword" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.OldPassword"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                   autocomplete="current-password"
                   aria-required="true"
                   placeholder="Please enter your old password." />
            <span asp-validation-for="Input.OldPassword" class="text-red-600 text-sm"></span>
        </div>

        <div class="space-y-2">
            <label asp-for="Input.NewPassword" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.NewPassword"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                   autocomplete="new-password"
                   aria-required="true"
                   placeholder="Please enter your new password." />
            <span asp-validation-for="Input.NewPassword" class="text-red-600 text-sm"></span>
        </div>

        <div class="space-y-2">
            <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Input.ConfirmPassword"
                   class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                   autocomplete="new-password"
                   aria-required="true"
                   placeholder="Please confirm your new password." />
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200">
            Update password
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}