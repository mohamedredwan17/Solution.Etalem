@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-2xl font-semibold text-gray-900 mb-6">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="container mx-auto">
    <div class="w-full md:w-1/2">
        <form id="profile-form" method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>
            <div class="relative">
                <input asp-for="Username" class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-100 text-gray-700 cursor-not-allowed" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="absolute top-0 left-0 px-4 py-2 text-gray-500 text-sm transition-all transform -translate-y-6 scale-75 origin-left pointer-events-none"></label>
            </div>
            <div class="relative">
                <input asp-for="Input.PhoneNumber" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="absolute top-0 left-0 px-4 py-2 text-gray-500 text-sm transition-all transform -translate-y-6 scale-75 origin-left pointer-events-none"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-red-600 text-sm"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-full bg-blue-600 text-white font-bold py-3 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}