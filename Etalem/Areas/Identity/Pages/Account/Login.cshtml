@page
@model Etalem.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mx-auto flex min-h-[80vh] items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
        <div class="rounded-xl bg-white p-8 shadow-lg">
            <div class="mb-6 text-center">
                <h1 class="text-2xl font-bold text-gray-900">@ViewData["Title"]</h1>
                <p class="mt-2 text-gray-600">Enter your credentials to access your account</p>
            </div>

            <form method="post" class="space-y-4">
                <div asp-validation-summary="All" class="text-red-600 text-sm"></div>
                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Input.Email" class="mt-1 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Input.Password" class="mt-1 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <div class="flex items-center">
                        <input asp-for="Input.RememberMe" class="mr-2 leading-tight" />
                        <label asp-for="Input.RememberMe" class="text-gray-700 text-sm"></label>
                    </div>
                </div>
                <div>
                    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Log in</button>
                </div>
            </form>

            <div class="mt-6 text-center text-sm">
                <p>
                    Don't have an account? <a asp-page="./Register" class="font-medium text-blue-600 hover:text-blue-500">Sign up</a>
                </p>
            </div>

            <div class="mt-4 text-center text-sm">
                <a asp-page="./ForgotPassword" class="font-medium text-blue-600 hover:text-blue-500">Forgot your password?</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}