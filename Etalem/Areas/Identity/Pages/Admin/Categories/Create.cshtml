@page
@model CreateModel
@{
    ViewData["Title"] = "Add Category";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white shadow-md rounded-2xl p-8 w-full max-w-md">
        <h2 class="text-2xl font-bold mb-6 text-center">Add New Category</h2>

        <form method="post" class="space-y-5">
            <div>
                <label asp-for="Category.Name" class="block mb-1 font-medium text-gray-700"></label>
                <input asp-for="Category.Name" class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Category.Name" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between items-center mt-6">
                <a asp-page="Index" class="text-gray-600 hover:text-blue-500">← Back</a>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-xl">Create</button>
            </div>
        </form>
    </div>
</div>
