@page
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="min-h-screen bg-gray-100 py-10 px-4">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold mb-8 text-gray-800 text-center">Admin Dashboard</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

            <!-- Manage Categories -->
            <a asp-page="/Admin/Categories/Index"
               class="bg-white border border-gray-200 rounded-2xl shadow-md p-6 hover:shadow-lg transition">
                <h2 class="text-xl font-semibold text-blue-700 mb-2">Manage Categories</h2>
                <p class="text-gray-600">Add, edit, or delete course categories.</p>
            </a>

            <!-- Placeholder for future section -->
            <div class="bg-white border border-gray-200 rounded-2xl shadow-md p-6 opacity-50 cursor-not-allowed">
                <h2 class="text-xl font-semibold text-gray-400 mb-2">Manage Courses</h2>
                <p class="text-gray-400">Coming soon...</p>
            </div>

            <div class="bg-white border border-gray-200 rounded-2xl shadow-md p-6 opacity-50 cursor-not-allowed">
                <h2 class="text-xl font-semibold text-gray-400 mb-2">Manage Users</h2>
                <p class="text-gray-400">Coming soon...</p>
            </div>

        </div>
    </div>
</div>
